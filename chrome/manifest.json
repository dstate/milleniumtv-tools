{
    "manifest_version": 2,

    "name": "Millenium TV Tools",
    "description": "Extension proposant divers outils pour les webtvs Millenium.org",
    "version": "0.1.1",
    "author": "Romain Pichot",

    "icons": {
        "16": "images/16.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "permissions": ["declarativeContent", "storage"],

    "content_scripts": [
        {
            "matches": ["http://*.mnium.org/player.html*", "https://*.mnium.org/player.html*"],
            "js": ["content-script.js"],
            "run_at": "document_end",
            "all_frames": true
        }
    ],

    "page_action": {
        "default_title": "Millenium TV Tools",
        "default_icon": {
            "19": "images/19.png",
            "38": "images/38.png"
        },
        "default_popup": "popup.html"
    }
}
